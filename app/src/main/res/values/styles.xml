<resources>
    <style name="NaviiTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@color/bootstrap_gray_lighter</item>
        <item name="android:colorBackground">@color/chalkWhite</item>
        <item name="android:textColor">@color/black</item>

        <item name="vpiCirclePageIndicatorStyle">@style/CircleIndicatorStyle</item>
    </style>

    <style name="CircleIndicatorStyle" parent="Theme.PageIndicatorDefaults">
    </style>

    <style name="NaviiTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NaviiTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NaviiTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/primaryDark</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="TagGridButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@drawable/grid_item_color_selector</item>
        <item name="android:colorActivatedHighlight">@drawable/grid_item_color_selector</item>
        <item name="android:colorButtonNormal">@drawable/grid_item_bg_selector</item>
        <item name="android:radius">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
