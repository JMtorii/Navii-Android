<resources>
    <style name="NaviiTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorBackground">@color/chalkWhite</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="NaviiTheme.NoActionBar" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/chalkWhite</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/secondary</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColorHighlight">@color/secondary</item>
        <item name="android:windowContentTransitions">true</item>
        <!--> For 6.0 and above <-->
        <item name="android:indeterminateTint">@color/primary</item>
    </style>

    <style name="NaviiTheme.NoActionBar.TransparentStatus" parent="NaviiTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NaviiTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NaviiTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="WhiteToolbarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">-->
        <!--<item name="android:textColor">@color/grey_primary</item>-->
    <!--</style>-->

    <style name="MainButton" parent="Theme.AppCompat.NoActionBar">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:colorControlHighlight">@color/primaryDark</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorBackground">@android:color/secondary_text_light</item>
    </style>
    
    <style name="BudgetButton" parent="ThemeOverlay.AppCompat">
        <item name="android:colorControlHighlight">@color/primary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="textColor">@color/primary</item>
    </style>

    <style name="TagGridButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@drawable/grid_item_color_selector</item>
        <item name="android:colorActivatedHighlight">@drawable/grid_item_color_selector</item>
        <item name="android:colorButtonNormal">@drawable/grid_item_bg_selector</item>
        <item name="android:radius">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_mode_edit_black_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogSlideAnimation" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
