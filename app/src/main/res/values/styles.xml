<resources>
    <style name="NaviiTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@color/chalkWhite</item>
        <item name="android:colorBackground">@color/chalkWhite</item>
        <item name="android:textColor">@color/black</item>

        <item name="vpiCirclePageIndicatorStyle">@style/CircleIndicatorStyle</item>
    </style>

    <style name="CircleIndicatorStyle" parent="Theme.PageIndicatorDefaults">
    </style>

    <style name="NaviiTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NaviiTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NaviiTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primary</item>
        <item name="colorButtonNormal">@color/primaryDark</item>
    </style>

</resources>
