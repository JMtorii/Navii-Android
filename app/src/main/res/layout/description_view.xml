<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/primary"
    card:cardBackgroundColor="@color/primary"
    card:cardCornerRadius="0dp"
    card:cardElevation="0dp"
    card:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/itinerary_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/attraction_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <com.teamawesome.navii.views.MainLatoTextView
            android:id="@+id/attraction_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/chalkWhite"
            android:textSize="30sp"/>

        <com.teamawesome.navii.views.MainLatoTextView
            android:id="@+id/attraction_price"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/attraction_start_time"
            android:gravity="left"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/chalkWhite"
            android:textSize="15sp"
            android:layout_alignParentStart="true"/>

        <com.teamawesome.navii.views.MainLatoTextView
            android:id="@+id/attraction_start_time_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="left"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/chalkWhite"
            android:text="@string/start_time_title"
            android:textSize="15sp"
            android:layout_alignTop="@+id/attraction_start_time"
            android:layout_alignParentStart="true"/>

        <com.teamawesome.navii.views.MainLatoTextView
            android:id="@+id/attraction_start_time"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/chalkWhite"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/attraction_start_time_title"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:background="@color/primaryDark"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/delete_button_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryDark"
            android:src="@drawable/ic_delete_black_24dp"/>
    </FrameLayout>
</android.support.v7.widget.CardView>
