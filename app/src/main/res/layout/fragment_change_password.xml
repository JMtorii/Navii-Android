<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/babyBlue">

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/profile_thumbnail"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:src="@drawable/imagination"
            android:background="#111"
            android:layout_marginTop="30dp"
            app:bootstrapBrand="info"
            app:showOutline="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:text="Spongebob Squarepants"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/babyBlue"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Username"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/profile_username_textview"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="f_is_friends_who_do_stuff_together"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/babyBlue"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Using Facebook?"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/profile_facebook_textview"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Naw"
        android:paddingLeft="20dp"
        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="hey"
        app:bootstrapSize="md"
        app:bootstrapBrand="info"
        />


</LinearLayout>