<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/babyBlue">

        <ImageView
            android:id="@+id/profile_thumbnail"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:src="@drawable/imagination"
            android:background="#111"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:text="Spongebob Squarepants"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/babyBlue"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Username"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/profile_username_textview"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="f_is_friends_who_do_stuff_together"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/babyBlue"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Using Facebook?"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/profile_facebook_textview"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Naw"
        android:paddingLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/profile_edit_button"
            android:text="Edit Profile"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/profile_change_password_button"
            android:text="Change password"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</LinearLayout>