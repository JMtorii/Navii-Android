<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.teamawesome.navii.activity.ProfileActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/babyBlue">

                    <ImageView
                        android:id="@+id/profile_thumbnail"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/imagination"
                        android:background="#111"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="Spongebob Squarepants"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/babyBlue"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:text="Username"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/profile_username_textview"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:text="f_is_friends_who_do_stuff_together"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/babyBlue"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:text="Using Facebook?"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/profile_facebook_textview"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:text="Naw"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/profile_edit_button"
                        android:text="Edit Profile"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/profile_change_password_button"
                        android:text="Change password"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:elevation="0dp"
                android:theme="@style/NaviiTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:popupTheme="@style/NaviiTheme.PopupOverlay" />

            </android.support.design.widget.AppBarLayout>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>