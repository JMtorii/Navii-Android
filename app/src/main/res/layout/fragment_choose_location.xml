<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/chalkWhite"
    tools:context="com.teamawesome.navii.fragment.main.ChooseLocationFragment">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/choose_location_slider_layout"
        android:layout_width="match_parent"
        custom:pager_animation="Accordion"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100"
        android:layout_height="200dp"/>

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/choose_location_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:selected_color="#0095BF"
        custom:unselected_color="#55333333"
        custom:selected_drawable="@drawable/bird"
        custom:shape="oval"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        custom:selected_width="6dp"
        custom:selected_height="6dp"
        custom:unselected_width="6dp"
        custom:unselected_height="6dp"
        android:layout_marginBottom="20dp"/>

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/choose_location_indicator2"
        style="@style/AndroidImageSlider_Corner_Oval_Orange"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where are you headed?"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="0dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:id="@+id/choose_location_where_edittext"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="20dp"
        app:bootstrapSize="md"
        app:roundedCorners="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Go to awesomeness"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/choose_location_next_button"
        app:roundedCorners="true"
        app:bootstrapBrand="info"
        app:bootstrapSize="md"
        app:buttonMode="regular"
        app:showOutline="false" />

    <Button
        android:id="@+id/choose_location_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date mofo" />

    <TextView
        android:id="@+id/choose_location_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i dunno"
        android:layout_marginTop="10dp" />

</LinearLayout>