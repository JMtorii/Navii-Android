<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chalkWhite"
    tools:context="com.teamawesome.navii.fragment.main.ChooseLocationFragment">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/choose_location_slider_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where are you headed?"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:id="@+id/choose_location_where_edittext"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="20dp"
        app:bootstrapSize="md"
        app:roundedCorners="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Go to awesomeness"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/choose_location_next_button"
        app:roundedCorners="true"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false" />

    <Button
        android:id="@+id/choose_location_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Date mofo" />

    <TextView
        android:id="@+id/choose_location_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="i dunno"
        android:layout_marginTop="10dp" />

</LinearLayout>