<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/whiteBackground"
        android:weightSum="1"
        android:id="@+id/choose_location_linear_layout">

        <android.support.v4.view.ViewPager
            android:id="@+id/choose_location_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:context=".FlockFragment"/>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/choose_location_indicator"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where are you headed?"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:id="@+id/choose_location_where_edittext"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:textColor="@android:color/black"
        android:textColorHint="#D3D3D3"
        android:textCursorDrawable="@null"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your destination"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Dates"
            android:id="@+id/choose_location_select_dates_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travellers"
            android:id="@+id/choose_location_travellers_button" />
    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:id="@+id/choose_location_tmp_image"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/rough_calendar" />

</LinearLayout>