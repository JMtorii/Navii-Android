<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_page5_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/rough_logo" />

        <!--TODO: Move to colors-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/intro_page5_sign_up_button"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:id="@+id/intro_page5_email_edittext"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textColorHint="#D3D3D3"
            android:textCursorDrawable="@null"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:id="@+id/intro_page5_password_edittext"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textColorHint="#D3D3D3"
            android:textCursorDrawable="@null"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/intro_page5_sign_in_button"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="or connect with"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@drawable/tmp_social_buttons"
            android:layout_gravity="center_horizontal" />

