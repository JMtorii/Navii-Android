<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="50dp"
        android:background="@android:color/white"
        android:layout_below="@+id/toolbar_layout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/heart_and_soul_save_name_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/heart_and_soul_save_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/heart_and_soul_save_name_hint"
                android:textColor="@color/grey_primary"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/include_toolbar_no_nav"/>
</RelativeLayout>