<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/budget_fragment">

    <com.teamawesome.navii.views.MainLatoTextView
        android:id="@+id/budget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget?"
        android:textSize="40sp"
        android:layout_above="@+id/budget_text"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/chalkWhite"/>

    <com.teamawesome.navii.views.MainLatoEditText
        android:id="@+id/budget_text"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:maxLength="8"
        android:textSize="40sp"
        android:textColor="@color/chalkWhite"
        android:text="$"
        android:gravity="center"
        android:layout_above="@+id/digit_pad"
        android:layout_centerInParent="true"
        android:layout_marginBottom="110dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/digit_pad"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="@color/lightGrey"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>