<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/main_activity_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_activity_toolbar">

        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/main_activity_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- The navigation drawer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_activity_drawer_linear_layout"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="#111">

            <!-- The profile image link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/main_activity_profile_button">

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:src="@drawable/imagination"
                    android:background="#111"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:duplicateParentState="true"
                    app:bootstrapBrand="info" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:background="#111"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Spongebob Squarepants"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/chalkWhite"
                    android:duplicateParentState="true"/>

            </LinearLayout>

            <ListView android:id="@+id/main_activity_left_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#111"/>
        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_activity_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:background="?attr/colorPrimary"/>

</RelativeLayout>
