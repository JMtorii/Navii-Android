<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamawesome.geese.activity.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/main_activity_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_activity_toolbar">
        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/main_activity_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- The navigation drawer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_activity_drawer_linear_layout"
            android:layout_gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:background="#111"
                android:text="This is a test."
                android:textColor="@color/whiteBackground"/>

            <ListView android:id="@+id/main_activity_left_drawer"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#111"/>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_activity_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:background="?attr/colorPrimary"/>

</RelativeLayout>
